<div class="title-div">
  <h1 class="typo">All my cats</h1>
  <% if user_signed_in? %>
    <%= link_to 'Add a cat', new_cat_path, class: "custom-button title-btn" %>
    <% end %>
</div>
<div class="card-main">
  <% current_user.cats.each do |cat| %>
    <%= link_to cat_path(cat) do %>
    <div class="card-index">
      <img src=<%= cat.photo.url %> />
      <div class="card-index-infos">
        <div>
          <h2><%= cat.name %></h2>
          <p><%= cat.breed %></p>
        </div>
        <div class="card-index-right">
          <h2><i class="fa-solid fa-<%= cat.gender == "female" ? "venus" : "mars" %>" style="color: #DB8434;;"></i></h2>
          <p><%= cat.price %> â‚¬ / j</p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
